{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@domain/*": [
        "./domain/*"
      ],
      "@ui/*": [
        "./ui/*"
      ],
      "@api/*": [
        "./domain/api/*"
      ],
      "@services/*": [
        "./domain/services/*"
      ],
      "@store/*": [
        "./domain/store/*"
      ],
      "@entities/*": [
        "./domain/entities/*"
      ],
      "@components/*": [
        "./ui/components/*"
      ],
      "@grilla/*": [
        "./ui/components/grilla/*"
      ],
      "@hooks/*": [
        "./ui/hooks/*"
      ],
      "@pages/*": [
        "./ui/pages/*"
      ],
      "@types/*": [
        "./ui/ts/*"
      ],
      "@utils/*": [
        "./ui/utils/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}